<table class="cart_table">
  <%= render(cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>
<table class="center_table">
  <tr>
    <td class="checkout">
      <% unless current_page?(:controller => 'orders', :action => 'new') %>
        <%= button_to t('.checkout'), new_order_path, method: :get, class: "tiny alert button" %>
      <% end %>
    </td>
    <td class="checkout">
      <%= button_to t('.empty'), cart, method: :delete,
          data: { confirm: 'Are you sure?' }, remote: true, class: "tiny alert button" %>
    </td>
  </tr>
</table>